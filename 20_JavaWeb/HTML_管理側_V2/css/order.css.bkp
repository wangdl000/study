.orderListTable {
	width:95%;
	margin:0 auto;
	border-bottom:1px solid #cccccc;
}
	.orderListTable th, .orderListTableNoBorder th {
		border-top:1px solid #cccccc;
		background-color: #EFF0EB;
		padding: 0 15px;
		width:24%;
		text-align:left;
		vertical-align:middle;
	}
	.orderListTable td{
		background-color:#ffffff;
		border-top: 1px solid #cccccc;
		padding: 10px 15px;
		text-align:left;
		
	}
	.orderListTableNoBorder td {
		border: none;
		padding-left: 4px;
	}

.sendDate {
	text-align: left;
	padding-left: 20px;
}
.text2{
	text-align:left;
	margin:10px 25px 0;
	line-height:1.2;
}
.textG{
	text-align:left;
	margin:10px 25px 0;
	line-height:1.2;
	color:#888888;
}



/* -----------------------------------------------
    お申込み商品の状況 (D-001)
   ----------------------------------------------- */
.deliveryList {
	font-size: large;
	padding: 20px 0 0 10px;
}
.deliveryListTable {
	border: 1px solid #E7D9BF;
	margin: 2px 0 12px 20px;
}
	.deliveryListTable th {
		border:1px solid #E7D9BF;
		background-color: #eeeeee;
		padding: 2px 8px;
	}
	.deliveryListTable td{
		border: 1px solid #E7D9BF;
		padding: 2px 8px;
	}

